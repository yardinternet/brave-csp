{
	"name": "yard/brave-csp",
	"type": "package",
	"description": "Content Security Policy for Brave sites",
	"license": "EUPL-1.2",
	"config": {
		"platform": {
			"php": "8.1"
		},
		"sort-packages": true
	},
	"require": {
		"php": ">=8.1",
		"spatie/laravel-csp": "^2.0"
	},
	"require-dev": {
		"yard/php-cs-fixer-rules": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Yard\\Csp\\Policies\\": "src/"
		}
	},
	"scripts": {
		"format": "vendor/bin/php-cs-fixer fix"
	}
}
